<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MVVM_MAUI_Simple_Todo_List.Models"   
             xmlns:viewModels="clr-namespace:MVVM_MAUI_Simple_Todo_List.ViewModels"
             xmlns:converters="clr-namespace:MVVM_MAUI_Simple_Todo_List.Converters"
             x:Class="MVVM_MAUI_Simple_Todo_List.Views.MainPage"
             x:DataType="viewModels:MainPageViewModel"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="10">

        <HorizontalStackLayout Spacing="10">
            <Entry
                Placeholder="Введите задачу..."
                Text="{Binding NewItemText}"
                HorizontalOptions="FillAndExpand" />
            
            <Button
                Text="Добавить"
                Command="{Binding AddItemAsyncCommand}" />
        </HorizontalStackLayout>

        <ActivityIndicator IsRunning="{Binding IsBusy}" />

        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                
                <DataTemplate x:DataType="models:TodoItem">
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                        
                        <CheckBox IsChecked="{Binding IsDone}">
                            <CheckBox.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=ToggleDoneAsyncCommand}"
                                    CommandParameter="{Binding .}" />
                            </CheckBox.GestureRecognizers>
                        </CheckBox>

                        <Label Grid.Column="1"
                               Text="{Binding Text}" 
                               TextDecorations="{Binding IsDone, Converter={StaticResource BoolToStrikethroughConverter}}"
                               VerticalOptions="Center"/>

                        <Button Grid.Column="2" 
                                Text="X"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainPageViewModel}}, Path=DeleteItemAsyncCommand}"
                                CommandParameter="{Binding .}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToStrikethroughConverter x:Key="BoolToStrikethroughConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
</ContentPage>