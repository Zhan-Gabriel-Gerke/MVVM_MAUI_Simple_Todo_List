<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MVVM_MAUI_Simple_Todo_List.ViewModels"
             xmlns:local="clr-namespace:MVVM_MAUI_Simple_Todo_List.Converters"
             xmlns:converters="clr-namespace:MVVM_MAUI_Simple_Todo_List.Converters"
             x:Class="MVVM_MAUI_Simple_Todo_List.Views.SettingsPage"
             x:DataType="viewModels:SettingsViewModel"
             Title="{local:Translate SettingsPageTitle}">

    <VerticalStackLayout Padding="20" Spacing="10">
        
        <Label Text="{local:Translate LanguageLabel}" FontSize="Medium" FontAttributes="Bold" />
        <HorizontalStackLayout Spacing="10">
            <Button
                Text="Eesti"
                Command="{Binding SetLanguageEstonianCommand}" />
            <Button
                Text="English"
                Command="{Binding SetLanguageEnglishCommand}" />
            <Button
                Text="Русский"
                Command="{Binding SetLanguageEnglishCommand}" />
        </HorizontalStackLayout>

        <Label Text="{converters:Translate ThemeLabel}" FontSize="Medium" FontAttributes="Bold" Margin="0,20,0,0" />
        <HorizontalStackLayout Spacing="10">
            <Button
                Text="{converters:Translate ThemeLight}"
                Command="{Binding SetThemeLightCommand}" />
            <Button
                Text="{converters:Translate ThemeDark}"
                Command="{Binding SetThemeDarkCommand}" />
            <Button
                Text="{converters:Translate ThemeSystem}"
                Command="{Binding SetThemeSystemCommand}" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>